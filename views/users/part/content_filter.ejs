<%  topics.forEach(function(topic){ %>
<div class="card mb-3" style="max-width: 100%;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <button type="button" class="btn btn-outline-secondary" data-toggle="modal"
                data-target="#myModal">subtopic</button>
            <h5 class="card-title" style="text-align: center; line-height: 140px;"><%- topic.title %></h5>

        </div>
        <div class="col-md-8">
            <div class="card-body">
                <%- topic.description.split('</p>',1) %>
            </div>
            <form action="/process/delete/<%- topic.id %>" method="POST">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary"
                        onclick="location.href='/page/<%- topic.id %>'">View</a></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"
                        onclick="location.href='/form/update/<%- topic.id %>'">Edit</button>
                    <input type="submit" class="btn btn-sm btn-outline-secondary" value="delete">
                </div>
            </form>
            <p class="card-text"><small class="text-muted"><%- topic.created %></small></p>
        </div>
    </div>
</div>
<% }) %>
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Subtopics</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <ul>

                </ul>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>