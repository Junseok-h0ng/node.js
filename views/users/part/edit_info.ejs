<form action="/user/edit/<%= userID %>" method="POST">
    <div class="form-group">
        <label for="old_password">현재 패스워드</label>
        <input type="password" class="form-control" name="old_pwd">
    </div>
    <div class="form-group">
        <label for="new_password">새로운 패스워드</label>
        <input type="password" class="form-control" name="new_pwd">
    </div>
    <div class="form-group">
        <label for="new_password2">패스워드 재입력</label>
        <input type="password" class="form-control" name="new_pwd2">
    </div>
    <input type="submit" class="btn btn-primary" value="submit">
</form>